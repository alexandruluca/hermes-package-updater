[*]
charset=utf-8
trim_trailing_whitespace: true
end_of_line=lf
insert_final_newline=false
indent_style=tab
indent_size=4

[{*.sht,*.html,*.shtm,*.shtml,*.htm}]
indent_style=tab
tab_width=4

[*.xhtml]
indent_style=tab
tab_width=4

[{*.jhm,*.xslt,*.xul,*.svg,*.rng,*.xsl,*.xsd,*.ant,*.tld,*.fxml,*.jrxml,*.xml,*.jnlp,*.wsdl}]
indent_style=tab
tab_width=4

[{.babelrc,.stylelintrc,.eslintrc,*.json,*.jsb3,*.jsb2,*.bowerrc}]
indent_style=tab
tab_width=4

[*.css]
indent_style=tab
tab_width=4

[{launchbase,*.applejs,*.js}]
indent_style=tab
tab_width=4

[{*.ats,*.ts}]
indent_style=tab
tab_width=4

[*.js.flow]
indent_style=tab
tab_width=4

[*.jsx]
indent_style=tab
tab_width=4

[{jshint.json,*.jshintrc}]
indent_style=tab
tab_width=4

[{*.jscs.json,*.jscsrc}]
indent_style=tab
tab_width=4

[tslint.json]
indent_style=tab
tab_width=4

[*.less]
indent_style=tab
tab_width=4

[*.scss]
indent_style=tab
tab_width=4

[{*.yml,*.yaml}]
indent_style=space
indent_size=2