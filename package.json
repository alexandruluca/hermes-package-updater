	"description": "PM2 Sample Module",
	"main": "app.js",
	"dependencies": {
		"ajv": "6.5.2",
		"err-code": "1.1.2",
		"hermes-cli": "https://github.com/alexandruluca/hermes-cli.git#2.1.1",
